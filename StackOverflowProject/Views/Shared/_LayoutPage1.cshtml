@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title - StackOverflow</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a class="navbar-brand" href="#">StackOverflow</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsiblenavBar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <ul class="navbar-nav">
                    <li class="nav-item-active">
                        <a class="nav-link" href="/home/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/categories">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/allquestions">Questions</a>
                    </li>

                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account/register">Register</a>
                        </li>
                    }
                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item-dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                <img src="~/Images/pngkit_user-png_729913.png" width="20px" />
                            </a>
                            <div class="dropdown-menu bg-info">
                                <a class="dropdown-item" href="/accounts/logout">Logout</a>
                                <a class="dropdown-item" href="/accounts/editprofile">Edit Profile</a>
                                <a class="dropdown-item" href="/accounts/editpassword">Edit Password</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="search-container">
                <form action="/home/search">
                    <input type="search" placeholder="Search" name="str" />
                    <button type = "submit">Search</button>
                </form>
            </div>
        </nav>
        @RenderBody()
    </div>
</body>
</html>
