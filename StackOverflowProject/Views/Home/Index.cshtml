@model List<StackOverflowProject.ViewModels.QuestionViewModel>
@{
    ViewBag.Title = "Home";
}
<div class="row">
    <div class="col-sm-12">
        <div class="mt-2 p-4 bg-secondary bg-gradient text-white rounded">
            <h1 class="display-4">Learn, Share and Build.</h1>
            <h3>The requirements of clients may grow, but the solutions to their problems shall not stop. Share your knowledge, learn from 
            all, build your applications.</h3>
            <p class="lead">Join the evergrowing community.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            @foreach(var item in Model)
            {
                Html.RenderPartial("Question", item);
            }
        </table>
        @if(Session["CurrentUserName"] != null)
            {
                <a href="questions/create" class="btn btn-primary">Add Question</a>
            }
    </div>
</div>

<script>
    $("a[href = '/home/index']").attr("id", "active");
</script>